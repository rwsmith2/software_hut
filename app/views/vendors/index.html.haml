
%br 
.card-header
    %h3 Vendor Home Page
    %br 
    %h5 Tasks To Do 
    .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", 
        "aria-valuenow" => "25", :role => "progressbar", :style => "width: 25%;"} 25%
    
    %br

    .dropdown
        %a#dropdownMenuLink.btn.btn-secondary.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Sort By
        .dropdown-menu{"aria-labelledby" => "dropdownMenuLink"}
            %a.dropdown-item Date Due
            %a.dropdown-item Date Set action
            %a.dropdown-item Importance here

.card-body
    %table.table.table-hover
        %thead
            %tr
                %th Task
                %th Set Date
                %th Due Date
                %th Link
            %tr
                %td Task Example
                %td 15/02/2021
                %td 31/04/2021
                %td Link
            %tr
                %td Another Example
                %td 20/02/2021
                %td 29/04/2021
                %td Link
            - Task.all.each do |task|
                %tr
                    %td= task.task_title


            


    