#assessment-detail-panel.w-100.p-3.d-flex.flex-column.justify-content-between
  .overflow-auto
    .assessment_box
      %p
        %span.font-weight-bold> Given task ID:&nbsp;
        = given_task.given_task_id 
      %p 
        %span.font-weight-bold> Due Date:&nbsp;
        = given_task.due_date
      %p 
        %span.font-weight-bold> Set Date:&nbsp;
        = given_task.set_date
      %p 
        %span.font-weight-bold> Priority:&nbsp;
        = GivenTask.priorityIntToString(given_task.priority)
      - if given_task.repeatable != 0
        %p 
          %span.font-weight-bold> Repeat:&nbsp;
          = ("Repeats every " + given_task.repeatable.to_s + " days")
      - if given_task.assignments != nil
        %p
          %span.font-weight-bold> Assignments:&nbsp;
          = (given_task.assignments.count.to_s + " vendors assigned")
          -# %br
          -# %ol.list-group.list-group-flush
          -# - given_task.assignments.each do |assignment|
          -#   %li.list-group-item= assignment.vendor_id


    .d-flex.flex-row.mt-3
      = link_to 'Destroy', given_task, method: :delete, data:{ confirm: 'Are you sure, assignments will be effected?'}, class: "btn btn-danger mx-1.w-25", type: "button"
      = link_to 'Edit', edit_given_task_path(given_task), class: "btn btn-outline-secondary mx-1.w-25 ajax-modal", type: "button"
