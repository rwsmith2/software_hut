.overflow-auto
  %p
    %span.font-weight-bold> Email: 
    = vendor.user.email
  %p
    %span.font-weight-bold> Company name: 
    = vendor.company_name
  %p
    %span.font-weight-bold> Address: 
    = vendor.address.house_name
  %p
    %span.font-weight-bold> City/Town: 
    = vendor.address.city_town
  %p
    %span.font-weight-bold> Postcode: 
    = vendor.address.postcode
  %p
    %span.font-weight-bold Country/Region: 
    = vendor.address.country
.d-flex.flex-row-reverse.mt-3
  = link_to 'Accept', accept_request_path(vendor: vendor), class: "btn btn-primary mx-1 w-25", type: "button"
  = link_to 'Reject', reject_request_path(vendor: vendor), class: "btn btn-danger mx-1 w-25", type: "button"
