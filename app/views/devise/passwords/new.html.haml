= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = f.error_notification
  
  %div.d-flex.justify-content-center.align-items-center{:style => "height:80vh"}
    .card.text-center{:style => "width:30em"}
      .card-header
        Forgot your Password?

      .card-bodys.m-4

        = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }

        .form-actions
          = f.button :submit, "Submit", class: "btn btn-primary w-100 mb-3"
          = render "devise/shared/links"

      .card-footer.text-muted
        We will send you reset password instructions!