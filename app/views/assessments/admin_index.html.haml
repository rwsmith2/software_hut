- content_for :title, 'Assessments'

.d-flex.m-4{:style => "height: 80vh; overflow: visible;"}
  #tasks-panel.card.m-2.w-100.h-100
    .card-header.d-flex.justify-content-between.align-items-center
      %h5.m-0 Assessments
      =link_to 'Create', admin_assessments_new_path(), class: "btn btn-primary"
      %form.d-flex
        %input.form-control.me-2{"aria-label" => "Search", :placeholder => "Search", :type => "search"}/
        %button.btn.btn-outline-primary{:type => "submit"} Search
    .card-body.p-0.d-flex
      #task-list-panel.w-50.p-3.d-flex.flex-column.justify-content-between.border-right
        #assessment-list.list-group.overflow-auto.p-1
          - @assessments.each do |assessment|
            = link_to assessment.assessment_title, fetch_assessment_path(assessment_id: assessment.assessment_id), remote: true, class: "list-group-item list-group-item-action", type: "button"

        %nav.mt-2{"aria-label" => "Page navigation"}
          %ul.pagination.justify-content-center
            %li.page-item.disabled
              %button.page-link{"aria-disabled" => "true", "aria-label" => "Previous", :tabindex => "-1"}
                %span{"aria-hidden" => "true"} «
            %li.page-item.active
              %button.page-link 1
            %li.page-item
              %button.page-link 2
            %li.page-item
              %button.page-link 3
            %li.page-item
              %button.page-link{"aria-label" => "Next"}
                %span{"aria-hidden" => "true"} »
      #admin_index
        = render partial: "show_assessment", locals: {assessment: @selected}
