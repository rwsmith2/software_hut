- content_for :title, ''

.card.mb-3
  %br
  .card-header
    Assessment page - Triage
  .card-body
    -# display the very first checkboxes
    = simple_form_for VendorAnswer.new do |f|
      %ul.pagination.justify-content-center
        %li
          - if @answers != nil
            - @answers.each do |ans|
              = f.check_box :answer_id, :checked => true
              = ans.answer_text
              %br
            %br
      -# uploading files
      %ul.pagination.justify-content-center
        %li 
          = f.label "Upload your certificates: ", :style => "font-weight:bold" 
          %br
          %br
          = f.file_field :image
          %br
          %br 
          = f.file_field :image
          %br
          %br
          %br
          %p Asessment progress
          .progress-bar{"aria-valuemax" => "200", "aria-valuemin" => "0", 
            "aria-valuenow" => "40", :role => "progressbar", :style => "width: 70%;"} 40%
      %br
      #task-detail-panel.w-40.p-5.d-flex.flex-column.justify-content-between
        .d-flex.flex-row-reverse
          = f.submit  "Submit", class: 'btn btn-outline-primary', :disabled => 'disabled'
          = f.submit  "Save", class: 'btn btn-outline-primary', :disabled => 'disabled'
      %nav.mt-2{"aria-label" => "Page navigation"}
        = link_to 'Go to the questions page', assessments_questions_path, class: "btn page-link", type: "button"